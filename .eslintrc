{
  "extends": [
    "standard",
    "prettier",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "browser": false,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "import/no-unresolved": ["error", { "commonjs": true, "amd": true }],
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "pathGroupsExcludedImportTypes": ["builtin"]
      }
    ],
    "prefer-template": 2,
    "no-multiple-empty-lines": 2,
    "no-multi-spaces": 2,

    "camelcase": 0,
    "eqeqeq": 0
  }
}
